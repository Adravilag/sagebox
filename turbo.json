{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "stencil.config.ts", "tsconfig.json", "package.json"],
      "outputs": ["dist/**", "loader/**"]
    },
    "build:icons": {
      "dependsOn": [],
      "inputs": ["packages/icons/src/**", "packages/icons/stencil.config.ts", "packages/icons/package.json"],
      "outputs": ["packages/icons/dist/**", "packages/icons/loader/**"]
    },
    "build:components": {
      "dependsOn": ["build:icons"],
      "inputs": ["packages/components/src/**", "packages/components/stencil.config.ts", "packages/components/package.json"],
      "outputs": ["packages/components/dist/**", "packages/components/loader/**"]
    },
    "build:packages": {
      "dependsOn": ["build:icons", "build:components"],
      "outputs": ["packages/*/dist/**", "packages/*/loader/**"]
    },
    "build:angular": {
      "dependsOn": ["build"],
      "outputs": ["dist/angular/**"]
    },
    "build:react": {
      "dependsOn": ["build"],
      "outputs": ["react/dist/**"]
    },
    "build:all": {
      "dependsOn": ["build", "build:angular", "build:react"],
      "outputs": ["dist/**", "loader/**", "react/dist/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test:spec": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "docs:dev": {
      "cache": false,
      "persistent": true
    },
    "docs:build": {
      "dependsOn": ["build"],
      "outputs": ["dist-docs/**"]
    }
  }
}
