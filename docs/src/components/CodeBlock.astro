---
/**
 * CodeBlock.astro
 * Componente reutilizable para mostrar bloques de código con estilo terminal
 * Incluye: dots macOS, nombre de archivo, números de línea, syntax highlighting, botón copiar
 */
import { useTranslations, type Language, defaultLang } from '../i18n/translations';

interface Props {
  code: string;
  filename?: string;
  language?: string;
  lang?: Language;
}

const { code, filename = 'example.html', language = 'html', lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

// Simple syntax highlighting for HTML/JSX
function highlightCode(codeStr: string): string {
  let result = codeStr
    .replace(/</g, '&lt;')
    .replace(/>/g, '&gt;');

  const placeholders: string[] = [];
  const placeholder = (content: string) => {
    const id = `__PH${placeholders.length}__`;
    placeholders.push(content);
    return id;
  };

  // Comments
  result = result.replace(/(&lt;!--[\s\S]*?--&gt;)/g, (match) =>
    placeholder(`<span class="hl-comment">${match}</span>`)
  );

  // Strings (attribute values)
  result = result.replace(/"([^"]*)"/g, (match, p1) =>
    placeholder(`<span class="hl-string">"${p1}"</span>`)
  );

  // Opening tags
  result = result.replace(/(&lt;)(sg-[\w-]+|button|div|span|p|pre|code|a|img|input|form|label|section|article|header|footer|nav|main|aside|ul|li|ol)(\s|&gt;)/g, (match, lt, tag, after) =>
    `${lt}${placeholder(`<span class="hl-tag">${tag}</span>`)}${after}`
  );

  // Closing tags
  result = result.replace(/(&lt;\/)(sg-[\w-]+|button|div|span|p|pre|code|a|img|input|form|label|section|article|header|footer|nav|main|aside|ul|li|ol)(&gt;)/g, (match, lt, tag, gt) =>
    `${lt}${placeholder(`<span class="hl-tag">${tag}</span>`)}${gt}`
  );

  // Attributes
  result = result.replace(/\s([\w-]+)=/g, (match, attr) =>
    ` ${placeholder(`<span class="hl-attr">${attr}</span>`)}=`
  );

  // Restore placeholders
  placeholders.forEach((content, i) => {
    result = result.replace(`__PH${i}__`, content);
  });

  return result;
}

const lines = code.split('\n');
---

<div class="code-block">
  <div class="code-window">
    <div class="code-titlebar">
      <div class="code-dots">
        <span class="dot red"></span>
        <span class="dot yellow"></span>
        <span class="dot green"></span>
      </div>
      <div class="code-filename">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="m16 18 6-6-6-6"/><path d="m8 6-6 6 6 6"/>
        </svg>
        <span>{filename}</span>
      </div>
      <button class="copy-btn" data-code={code} title={t.common.copy}>
        <svg class="copy-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="9" y="9" width="13" height="13" rx="2"/>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
        </svg>
        <svg class="check-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20 6L9 17l-5-5"/>
        </svg>
        <span class="copy-label">{t.common.copy}</span>
        <span class="copied-label">{t.common.copied}</span>
      </button>
    </div>
    <div class="code-content">
      <div class="line-numbers" aria-hidden="true">
        {lines.map((_, i) => <span class="line-num">{i + 1}</span>)}
      </div>
      <pre><code set:html={highlightCode(code)} /></pre>
    </div>
  </div>
</div>

<style>
  .code-block {
    width: 100%;
  }

  .code-window {
    background: #0d1117;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.2),
      0 2px 4px -2px rgba(0, 0, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .code-titlebar {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1rem;
    background: linear-gradient(180deg, #161b22 0%, #0d1117 100%);
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .code-dots {
    display: flex;
    gap: 6px;
  }

  .code-dots .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    transition: opacity 0.2s;
  }

  .code-dots .dot.red {
    background: linear-gradient(135deg, #ff5f57 0%, #e64940 100%);
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.1);
  }

  .code-dots .dot.yellow {
    background: linear-gradient(135deg, #febc2e 0%, #d9a119 100%);
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.1);
  }

  .code-dots .dot.green {
    background: linear-gradient(135deg, #28c840 0%, #1fa52e 100%);
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.1);
  }

  .code-window:hover .code-dots .dot {
    opacity: 0.8;
  }

  .code-filename {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    color: #8b949e;
    font-family: var(--font-mono);
  }

  .code-filename svg {
    opacity: 0.6;
  }

  .code-content {
    display: flex;
    overflow-x: auto;
  }

  .line-numbers {
    display: flex;
    flex-direction: column;
    padding: 1rem 0;
    background: rgba(0, 0, 0, 0.2);
    border-right: 1px solid rgba(255, 255, 255, 0.06);
    user-select: none;
    min-width: 3rem;
    text-align: right;
  }

  .line-num {
    padding: 0 0.75rem;
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    line-height: 1.7;
    color: #6e7681;
  }

  .code-block pre {
    margin: 0;
    padding: 1rem 1.25rem;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    line-height: 1.7;
    overflow-x: auto;
    flex: 1;
    white-space: pre;
    tab-size: 2;
  }

  .code-block code {
    color: #c9d1d9;
  }

  .copy-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.375rem 0.75rem;
    height: 30px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
    color: #8b949e;
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .copy-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    color: #c9d1d9;
  }

  .copy-btn .check-icon,
  .copy-btn .copied-label {
    display: none;
  }

  .copy-btn.copied .copy-icon,
  .copy-btn.copied .copy-label {
    display: none;
  }

  .copy-btn.copied .check-icon,
  .copy-btn.copied .copied-label {
    display: inline;
  }

  .copy-btn.copied {
    background: rgba(46, 160, 67, 0.2);
    border-color: rgba(46, 160, 67, 0.4);
    color: #3fb950;
  }

  /* Syntax Highlighting - GitHub Dark Theme */
  .code-block :global(.hl-comment) {
    color: #8b949e;
    font-style: italic;
  }

  .code-block :global(.hl-tag) {
    color: #7ee787;
  }

  .code-block :global(.hl-attr) {
    color: #79c0ff;
  }

  .code-block :global(.hl-string) {
    color: #a5d6ff;
  }

  .code-block :global(.hl-keyword) {
    color: #ff7b72;
  }

  /* Scrollbar */
  .code-content::-webkit-scrollbar,
  .code-block pre::-webkit-scrollbar {
    height: 8px;
    width: 8px;
  }

  .code-content::-webkit-scrollbar-track,
  .code-block pre::-webkit-scrollbar-track {
    background: transparent;
  }

  .code-content::-webkit-scrollbar-thumb,
  .code-block pre::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
  }

  .code-content::-webkit-scrollbar-thumb:hover,
  .code-block pre::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.2);
  }
</style>

<script>
  // Copy button functionality
  document.querySelectorAll('.code-block .copy-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const code = btn.getAttribute('data-code') || '';
      await navigator.clipboard.writeText(code);
      btn.classList.add('copied');
      setTimeout(() => btn.classList.remove('copied'), 2000);
    });
  });
</script>
